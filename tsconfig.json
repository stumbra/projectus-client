{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "build",
    "baseUrl": ".",
    "moduleResolution": "node",
    "typeRoots": [
      "./common/types",
      "./node_modules/@types"
    ],
    "rootDirs": [
      "src"
    ],
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "sourceMap": true,
    "noLib": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
